{
  "compilerOptions": {
    "target": "ES2018", 
    "jsx": "react-jsx",               
    "jsxImportSource": "@emotion/react",                   
    "module": "commonjs",
    "moduleResolution": "node",             
    "baseUrl": ".",
    "paths":{
      "@/*": ["src/*"]
    },
    "types": ["jest", "@testing-library/jest-dom", "node", "cypress", "@testing-library/cypress"],                                      
    "resolveJsonModule": true,                       
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true,
    "skipLibCheck": true 
  },
  "exclude": [
    "./cypress.config.ts",
    "node_modules",
    "**/*.spec.ts",
    "cypress",
    "**/*.cy.tsx",
  ]
}
